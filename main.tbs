include "global.tbh"

dim url as string = "httpbin.org/post"
dim data as string = "name1=value1&name2=value2"

sub on_sys_init()
	
	DHCP_DNS_init()
	dhcp_start(PL_SOCK_INTERFACE_NET,"","")

end sub

sub on_button_pressed()

	http_send_request(url, HTTP_POST, PL_SOCK_INTERFACE_NET, data)
	
end sub

sub on_sock_data_arrival()

	dhcp_proc_data()
	dns_proc_data()
	get_http_headers()	
	get_http_content()
	
end sub
